# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts,xml,kt.spec,kts.spec}]
indent_size = 4

[*.{kt,kts}]
kotlin_imports_layout=ascii
disabled_rules=no-wildcard-imports

[*.md]
trim_trailing_whitespace = false


